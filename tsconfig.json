{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2020", "dom"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node", "jest"],
      "outDir": "app",
      "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "__tests__", "__test__", "app", "jest.config.ts"]
  }
  